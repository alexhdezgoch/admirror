# Apify API Configuration
# Get your API token from https://console.apify.com/account/integrations
APIFY_API_TOKEN=your_apify_api_token_here

# Google Gemini API Configuration
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic API Configuration
# Get your API key from https://console.anthropic.com
# Used for playbook generation and creative tagging
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Supabase Configuration
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_PRICE_ID=your_stripe_price_id_for_brand_subscription
# Webhook secret from Stripe Dashboard > Developers > Webhooks
# Register webhook URL: https://your-domain.com/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Meta (Facebook) API Configuration
# Get these from https://developers.facebook.com > Your App > Settings > Basic
NEXT_PUBLIC_META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret

# Cron Job Configuration
# Secret token to protect the daily sync cron endpoint
# Generate with: openssl rand -hex 32
CRON_SECRET=your_cron_secret_here
